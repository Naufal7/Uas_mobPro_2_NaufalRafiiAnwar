<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingVertical="15dp"
        android:text="Dashboard"
        android:textColor="@color/yello"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txt_dashboard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/toplayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_call"
                    android:layout_width="300dp"
                    android:layout_height="220dp"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgcall"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_phone_black_24dp"
                            android:padding="10dp" />

                        <TextView
                            android:id="@+id/txtemergency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgcall"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="10dp"
                            android:text="Emergencz"
                            android:textStyle="bold" />

                        <View
                            android:id="@+id/linecall"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/txtemergency"
                            android:layout_centerInParent="true"
                            android:layout_margin="10dp"
                            android:background="@color/orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/linecall"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Need Help?"
                            android:textColor="@android:color/darker_gray" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/midLayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/toplayer"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/petscardview"
                    android:layout_width="300dp"
                    android:layout_height="220dp"
